<p>{{review.comment}}</p>
<ul class="rating-list">
    <li class="rating">
        <span class="rating__label">chicken piece rating:</span>
        <span class="rating__value rating__value--{{review.chickenPieceRating}}">
            <span class="rating__number">{{review.chickenPieceRating}}</span>
        </span>
    </li>
    <li class="rating">
        <span class="rating__label">chicken wing rating:</span>
        <span class="rating__value rating__value--{{review.chickenWingRating}}">
            <span class="rating__number">{{review.chickenWingRating}}</span>
        </span>
        
    </li>
    <li class="rating">
        <span class="rating__label">fry rating:</span>
        <span class="rating__value rating__value--{{review.fryRating}}">
            <span class="rating__number">{{review.fryRating}}</span>
        </span>
    </li>
    <li class="rating">
        <span class="rating__label">sauce rating:</span>
        <span class="rating__value rating__value--{{review.sauceRating}}">
            <span class="rating__number">{{review.sauceRating}}</span>
        </span>
    </li>
    <li class="rating">
        <span class="rating__label">drink rating:</span>
        <span class="rating__value rating__value--{{review.drinksRating}}">
            <span class="rating__number">{{review.drinksRating}}</span>
        </span>
    </li>
    <li class="rating">
        <span class="rating__label">overall rating:</span>
        <span class="rating__value rating__value--{{review.overallRating}}">
            <span class="rating__number">{{review.overallRating}}</span>
        </span>
    </li>
</ul>
